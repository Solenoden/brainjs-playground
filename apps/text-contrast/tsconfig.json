{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": true,
    "types": [
      "node"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": ["**/*"],
  "exclude": ["dist"]
}